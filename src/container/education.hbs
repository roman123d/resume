{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


<div>
 
    {{#with main}}
    <main>
        <section>
            {{> title data="My education" big=true}}
            <ul>
                {{#each education}}
                    <li>
                         {{name}}
                         {{#if point includeZero=true}} {{/if}}
                        {{#if isEnd}} (ще в процесі) {{/if}}
                    </li>
                {{/each}}
            </ul>
        </section> 

         <section>
            {{> title data="My certificates"}}
            <ul>
                {{#each certificates}}
                    <li>
                         {{name}}                     
                        {{#if id}} (ID {{/if}}
                      {{#if point includeZero=true}} {{point}}) {{/if}}
                       
                    </li>
                {{/each}}
            </ul>
        </section> 
    </main> 
     {{/with}}
          
</div>


